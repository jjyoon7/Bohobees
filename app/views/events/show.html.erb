<div class="container">

  <h1 class="page-title"><%= @event.title %> </h1>

  <div class="wrapper">
    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <ul class="categories">
            <li> Date: </li>
            <li> # of Guests: </li>
            <li> BLD? </li>
            <li> City: </li>
            <li> Al little more to know ... </li>
          </ul>
        </div>
        <div class="col-xs-3">
          <ul>
            <li> <%= @event.date %> </li>
            <li> <%= @event.guest %> </li>
            <li> <%= @event.meal %> </li>
            <li> <%= @event.place %> </li>
            <li> <%= @event.description %> </li>
          </ul>
        </div>
        <div class="col-xs-3">
          <% if @event.user %>
          <% if @event.user.photo.file.nil? %>
          <%= image_tag('http://res.cloudinary.com/dvcylwwvz/image/upload/v1465481491/Empty_Star_py08hj.svg', class: "card-user") %>
          <% else %>
          <%= image_tag(@event.user.photo, class: "profile_picture") %>
          <% end %>
          <% end %>
        </div>
        <div class="col-xs-3">
          <%= link_to "View host's profile", profile_path(@event), class: "btn sab-button" %>
          <br>
          <br>
          <%= link_to "Make a request!", new_event_reservation_path(@event), class: "btn sab-button" %>
          <br>
          <br>
          <%= link_to "Back to search results", events_path(search: session[:search_results]), class: "btn sab-button" %>
        </div>
        <div class="col-xs-12">
        </div>
      </div>
    </div>
  </div>

</div>
