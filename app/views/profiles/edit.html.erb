<div class="profile-edit-form">
<div class="container">
  <div class="row">
  <div class="col-xs-6">

      <h2>Edit your profile</h2>

      <%= simple_form_for @user, url: profile_path do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>

        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %> <br>

        <%= f.input :first_name %>

        <%= f.input :last_name %>

        <%= f.input :city %>

        <%= f.input :street_address %>

        <%= f.input :visited, label: 'Countries you have been'%>

        <%= f.input :future_visit, label: 'Countries you want to visit', class: "form-control" %>

        <%= f.input :interest, label: 'About me', class: "form-control" %>

      </div>

      <div class="form-actions">
        <%= f.button :submit, "Submit" %>
      </div>
      <% end %>

    </div>
  </div>
</div>
</div>
